<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bus_number"
        android:layout_width="92dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="43315"
        android:textSize="20dp"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/remain_station"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/remain_time"
        app:layout_constraintStart_toEndOf="@id/bus_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="null"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/remain_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/remain_station"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bus_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>